<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Botón para suscribirse al tema MQTT -->

    <!-- TextView para mostrar mensajes MQTT recibidos -->
    <TextView
        android:id="@+id/msg_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="#EEEEEE"
        android:text="Esperando mensajes..."
        android:textSize="16sp" />

    <!-- EditText para ingresar el mensaje a enviar -->
    <EditText
        android:id="@+id/mandarmsg_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:hint="Escribe tu mensaje"
        android:inputType="text"
        android:minHeight="48dp" />

    <!-- Botón para enviar el mensaje al tema MQTT -->

    <Button
        android:id="@+id/enviar_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Enviar" />

    <Button
        android:id="@+id/subscribe_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Suscribirse" />

</LinearLayout>